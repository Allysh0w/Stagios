<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/fundo"
    tools:context="com.rerum.estagios.estagios.VisualizaVagaActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

        <!-- Imagem Título    -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/logoVisualizaVaga"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_cargo"
                android:textColor="@color/branco"
                android:textSize="20dp"
                android:text="asdaksdnjskdnasjndjaksdnsakdn"
                android:layout_marginLeft="8dp"
                android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome_empresa_vaga"
        android:textColor="@color/branco"
        android:textSize="12dp"
        android:text="asdaksdnjskdnasjndjaksdnsakdn"
        android:layout_marginLeft="8dp"

        />
        </LinearLayout>
</LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!--Descrição da vaga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:textSize="20dp"
                    android:id="@+id/titulo_descricao"
                    android:textStyle="bold"
                    android:text="Descrição da vaga:"
                    android:layout_marginTop="10dp"

                    />

                <!-- Informação da descrição da vaga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_descricao"
                    android:textColor="@color/branco"
                    android:textSize="10dp"
                    android:text="sdasasfsafasfsafaesfdfdsfdfsdfsdfdsfsdsfsdf"

                    />

                <!--Requisitos da vaga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:id="@+id/titulo_requisito"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Requisitos: "
                    android:layout_marginTop="10dp"
                    />
                <!--Informações sobre os requisitos da vaga-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_requisitos"
                    android:textColor="@color/branco"
                    android:textSize="10dp"
                    android:text="sdasasfsafasfsafaesfdfdsfdfsdfsdfdsfsdsfsdf"
                    />

                <!--Período mínimo para a vaga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/titulo_periodo"
                    android:text="Periodo letivo mínimo: "
                    android:layout_marginTop="10dp"
                    />

                <!--Informações sobre o período mínimo da vaga-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_periodoMinimo"
                    android:textColor="@color/branco"
                    android:textSize="10dp"
                    android:text="sdasasfsafasfsafaesfdfdsfdfsdfsdfdsfsdsfsdf"
                    />

                <!--Valor proposto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/titulo_valor"
                    android:text="Valor proposto: "
                    android:layout_marginTop="10dp"
                    />

                <!--Informações sobre o valor proposto da vaga-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_valorProposto"
                    android:textColor="@color/branco"
                    android:textSize="10dp"
                    android:text="sdasasfsafasfsafaesfdfdsfdfsdfsdfdsfsdsfsdf"
                    />

                <!--Contato telefone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:textSize="20dp"
                    android:id="@+id/titulo_contato"
                    android:textStyle="bold"
                    android:text="Contato: "
                    android:layout_marginTop="10dp"
                    />

                <!--Informações sobre o telefone -->
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_contatoTelefone"
                    android:textColor="@color/branco"
                    android:textSize="13dp"
                    android:text="sdasasfsafasfsafaesfdfdsfdfsdfsdfdsfsdsfsdf"
                    android:background="@drawable/meubotao"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    />

                <!--Contato email -->
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Email: "
                    android:layout_marginTop="10dp"
                    /> -->

                <!--Informações sobre o email -->
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_contatoEmail"
                    android:textColor="@color/branco"
                    android:textSize="13dp"
                    android:text="sdasasfsafasfsafaesfdfdsfdfsdfsdfdsfsdsfsdf"
                    android:background="@drawable/meubotao"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    />


                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_contatoSite"
                    android:textColor="@color/branco"
                    android:textSize="13dp"
                    android:text="Acesse o site"
                    android:background="@drawable/meubotao"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    />

            </LinearLayout>



            <!--  <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
                  android:gravity="bottom"> -->

